<div class="contact-wrap" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <div class="contact_form">
          <div class="title">
            <h1><%= t 'newsletter' %></h1>
          </div>
          <p><%= t 'sign-up' %></p>
          <%= form_for (Customer.new), :html => { :class =>"form" } do |f| %>
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :first_name, :required => true, placeholder: t('first_name'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :last_name, placeholder: t('last_name'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.email_field :email, :required => true, placeholder: t('email'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :phone_number, :required => true, placeholder: t('phone'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                <%= f.text_area :message, :required => true, placeholder: t('message'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <div class="button">
                <%= f.submit t('join'), data: { confirm: t('welcome_message') },class: "btn primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="contact_info">
          <div class="title">
            <h1><%= t 'contact1' %> <span><%= t 'information' %></span></h1>
          </div>
          <ul class="contact-list unorderList">
            <li>
              <div class="contact_box">
                <div class="icon"> <img alt="" src="<%= asset_path("adress.png") %>"> </div>
                <p>Fery Beaut√© Spa <span><%= t 'address' %> #356 <br>Montreal, QC H1S 2P3</span></p>
              </div>
            </li>
            <li>
              <div class="contact_box">
                <div class="icon"> <img alt="" src="<%= asset_path("email.png") %>"> </div>
                <p><%= t 'email1' %><span> <a href="mailto:info@example.com">info.rossistyles@gmail.com</a></span></p>
              </div>
            </li>
            <li>
              <div class="contact_box">
                <div class="icon"> <img alt="" src="<%= asset_path("phone.png") %>"> </div>
                <p><%= t 'phone' %><span> <a href="tel:7701234567">514.947.4393</a></span></p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
